<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Assignment2.MainPage"
             Title="Find Flights">       
<!-- The front page has no functionality with the backend.-->
    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">
            <Image
                Source="logo.png"
                HeightRequest="250"
                Aspect="AspectFit"
                SemanticProperties.Description="Traveless Logo" />

            <Label
                Text="Welcome to our new website!"
                Style="{StaticResource SubHeadline}"
                SemanticProperties.HeadingLevel="Level5"
                SemanticProperties.Description="Welcome to the website" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>